    "hash": "67998c57fc520946f4041152dc3a1f3d5558d4da8062630e9079e31061a21f68",
    "post_install": [
      "$WshShell = New-Object -ComObject WScript.Shell",
      "$Shortcut = $WshShell.CreateShortcut([Environment]::GetFolderPath('Desktop') + '\\' + $manifest.shortcuts[0][0] + '.lnk')",
      "$Shortcut.TargetPath = Join-Path $dir $manifest.shortcuts[0][0]",
      "$Shortcut.Description = \"id=$app;installer=scoop\"",
      "$Shortcut.Save()"
    ],
    "pre_uninstall": [
      "Remove-Item -Path (Join-Path ([Environment]::GetFolderPath('Desktop')) ($manifest.shortcuts[0][0] + '.lnk')) -ErrorAction SilentlyContinue"
    ],
    "shortcuts": [
      [
        "Content Manager.exe",
        "Assetto Corsa Content Manager"
      ]
    ],
    "checkver": "github",
    "autoupdate": {
      "url": "https://github.com/gro-ove/actools/releases/download/v$version/Content.Manager.zip"
    }
  },

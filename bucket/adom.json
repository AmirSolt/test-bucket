    "extract_dir": "adom",
    "bin": "adom.exe",
    "post_install": [
        "$WshShell = New-Object -ComObject WScript.Shell",
        "$Shortcut = $WshShell.CreateShortcut([Environment]::GetFolderPath('Desktop') + '\\' + $manifest.shortcuts[0][0] + '.lnk')",
        "$Shortcut.TargetPath = Join-Path $dir $manifest.shortcuts[0][0]",
        "$Shortcut.Description = \"id=$app\"",
        "$Shortcut.Save()"
    ],
    "pre_uninstall": [
        "Remove-Item -Path (Join-Path ([Environment]::GetFolderPath('Desktop')) ($manifest.shortcuts[0][0] + '.lnk')) -ErrorAction SilentlyContinue"
    ],
    "shortcuts": [
        [
            "adom.exe",
            "Ancient Domains of Mystery (ASCII)"
        ]
    ],
    "checkver": {
        "url": "https://www.adom.de/home/downloads.html",
        "re": "Version ([\\d.]+)"
    },
    "autoupdate": {
        "url": "https://www.adom.de/home/download/current/adom_windows_$version.zip"
    }
